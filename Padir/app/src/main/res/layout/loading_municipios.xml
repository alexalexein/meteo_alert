<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="370dp"
    android:background="@android:color/white"
    >
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/loading_linear_layout">

        <TextView
            android:id="@+id/loadingMunicipiosTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loadingMunicipiosTitle"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/loadingMunicipiosSubtitleTextView"
            android:text="@string/loadingMunicipiosText"
            />

    </LinearLayout>

</LinearLayout>